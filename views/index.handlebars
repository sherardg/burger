$(".eatBurger").click(function(event){
    event.preventDefault()
    let id = $(this).attr("data-id")
    console.log(id)
    $.ajax({
        url:'/api/burgers/'+id,
        type:'PUT',
    }).then(function(info){
        location.reload()
    })
})
</script>