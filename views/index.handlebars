<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center" id="top">
            <h1>Eat Da Burger</h1>
        </div>

        <div class="col-sm-6 text-center" class="task">
            <div class="row">
                {{#each burger_Data}}
                {{!-- {{#unless this.devoured}} --}}
            </div>

            <div class="col-sm-9 text-center">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            </div>

            <div class="col-sm-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}> <br>
                        <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                        </form>
            </div>
             {{!-- {{/unless}} --}}
            {{/each}}
            </div>
        </div>
    </div>
</div>